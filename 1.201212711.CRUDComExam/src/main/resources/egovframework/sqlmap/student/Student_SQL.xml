<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Student">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="studentSerarchVO" type="egovframework.student.StudentDefaultVO"/>
	
	<resultMap id="student" class="egovframework.student.StudentVO">
		<result property="no" column="no" columnIndex="1"/>
		<result property="number" column="number" columnIndex="2"/>
		<result property="name" column="name" columnIndex="3"/>
	</resultMap>
	
	<insert id="studentDAO.insertStudent_S">
		<![CDATA[
			INSERT INTO student 
				( no
				  , number
				  , name )
			VALUES ( #no#
				  , #number#
				  , #name# )
		]]>
	</insert>
	
	<update id="studentDAO.updateStudent_S">
		<![CDATA[
			UPDATE student
			SET no=#no#
				, number=#number#
				, name=#name#
						WHERE no=#no#
				]]>
	</update>
	
	<delete id="studentDAO.deleteStudent_S">
		<![CDATA[
			DELETE FROM student 
						WHERE no=#no#
				]]>
	</delete>
	
	<select id="studentDAO.selectStudent_S" resultMap="student">
		<![CDATA[
			SELECT
				no
				, number
				, name
			FROM student
						WHERE no=#no#
				]]>
	</select>
	
	<select id="studentDAO.selectStudentList_D" parameterClass="studentSerarchVO" resultClass="egovMap">
			SELECT
								no
								, number
								, name
					FROM student
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				no = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				number LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
				ORDER BY 
						no DESC
					limit #firstIndex#, #recordCountPerPage#	
	</select>	
	<select id="studentDAO.selectStudentListTotCnt_S" parameterClass="studentSerarchVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM student
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				no = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				number LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
	</select>

</sqlMap>
